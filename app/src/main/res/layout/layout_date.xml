<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp">

    <com.zyyoona7.wheel.WheelView
        android:id="@+id/wv_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:wv_curved="false"
        app:wv_dividerColor="#FFFFFF"
        app:wv_dividerHeight="1dp"
        app:wv_lineSpacing="21dp"
        app:wv_normalItemTextColor="#d9d9d9"
        app:wv_selectedItemPosition="0"
        app:wv_selectedItemTextColor="#333333"
        app:wv_showDivider="true"
        app:wv_textAlign="center"
        app:wv_textSize="24sp"
        app:wv_visibleItems="2" />

    <com.zyyoona7.wheel.WheelView
        android:id="@+id/wv_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wv_date"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:wv_curved="true"
        app:wv_dividerColor="#FFFFFF"
        app:wv_dividerHeight="1dp"
        app:wv_lineSpacing="21dp"
        app:wv_normalItemTextColor="#d9d9d9"
        app:wv_selectedItemPosition="0"
        app:wv_selectedItemTextColor="#333333"
        app:wv_showDivider="true"
        app:wv_textAlign="left"
        app:wv_textSize="24sp"
        app:wv_visibleItems="5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="hhaahhahahahah"
        android:textColor="#333333"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>